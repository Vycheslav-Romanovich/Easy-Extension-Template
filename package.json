{
  "name": "easy_extension_template",
  "version": "1.5.0",
  "scripts": {
    "watch:tailwind": "tailwindcss src/tailwind.css -o extension/dist/tailwind.dist.css --watch",
    "build:tailwind": "NODE_ENV=production postcss src/tailwind.css -o extension/dist/tailwind.dist.css",
    "dev": "concurrently \"cross-env NODE_ENV=development webpack --config webpack.config.js --mode=development --watch\" \"cross-env NODE_ENV=development yarn run watch:tailwind\"",
    "build": "cross-env NODE_ENV=production npm run build:tailwind && webpack --mode production",
